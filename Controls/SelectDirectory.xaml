<UserControl x:Class="Telesyk.SecuredSource.UI.Controls.SelectDirectoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Telesyk.SecuredSource.UI.Controls"
	xmlns:res="clr-namespace:Telesyk.SecuredSource.Globalization;assembly=Telesyk.SecuredSource.Localization"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="21" />
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource PanelFieldHeader}"><Run Text="{x:Static res:Strings.Directory}" />:</TextBlock>
		<TextBox Grid.Row="1" Grid.Column="0" x:Name="TextDirectory" IsReadOnly="True" />
		<Button Grid.Row="1" Grid.Column="1" Content="..." ToolTip="{x:Static res:Strings.Browse}" PreviewMouseLeftButtonUp="ButtonBrowse_MouseLeftButtonUp" />
	</Grid>
</UserControl>
