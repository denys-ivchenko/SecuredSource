<UserControl x:Class="Telesyk.SecuredSource.UI.MoreFeaturesMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Telesyk.SecuredSource.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="120" MaxWidth="300" Width="160" Cursor="Hand" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="12" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Row="0" Background="#dfecf7" />
		<GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#e9f1f8">
			<GridSplitter.Effect>
				<DropShadowEffect Direction="180" Opacity="0.5" ShadowDepth="3" BlurRadius="6" Color="#dde3e8" />
			</GridSplitter.Effect>
		</GridSplitter>
		<!--<TextBlock Grid.Column="2" Panel.ZIndex="2" FontFamily="Segoe UI" Opacity="0.8" FontSize="9" VerticalAlignment="Center" Margin="2,0,0,0">
				<TextBlock.LayoutTransform>
					<RotateTransform Angle="90" />
				</TextBlock.LayoutTransform>
				<Run Foreground="Red">р</Run>ухай це
			</TextBlock>-->
		<StackPanel Grid.Column="3" />
	</Grid>
</UserControl>
