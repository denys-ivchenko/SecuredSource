<UserControl x:Class="Telesyk.SecuredSource.UI.Controls.SimpleAndFastPanelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Telesyk.SecuredSource.UI.Controls"
	xmlns:res="clr-namespace:Telesyk.SecuredSource.Globalization;assembly=Telesyk.SecuredSource.Localization"
	mc:Ignorable="d" d:DesignHeight="350" d:DesignWidth="250">
	<StackPanel Style="{StaticResource PanelContainer}">
		<local:SelectFileControl x:Name="ControlFile" />
		<local:PasswordControl x:Name="ControlPassword" />
		<Button x:Name="ButtonLoad" Content="{x:Static res:Strings.ReadArchive}" Style="{StaticResource PanelFieldHeader}" Click="ButtonLoad_Click" />
		<local:SelectDirectoryControl x:Name="ControlDirectory" />
		<TextBlock x:Name="TextProcess" Style="{StaticResource PanelFieldHeader}" />
	</StackPanel>
</UserControl>
